{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "Grupo de Escalado con ELB",
  "Parameters": {
    "TipoInstancia": {
      "Type": "String",
      "Description": "Tipo de instancia",
      "AllowedValues": [ "t2.micro", "t2.small" ],
      "Default": "t2.micro"
    },
    "NumeroInstancias" : {
      "Type": "String",
      "Description": "Numero de instancias para el grupo de escalado",
      "AllowedValues" : [ "1", "2", "3" ],
      "Default": "1"
    },
    "ParClave": {
      "Type": "AWS::EC2::KeyPair::KeyName",
      "Description": "Par de claves para acceder a la instancia",
      "AllowedPattern" : ".+",
      "ConstraintDescription": "Es obligatorio seleccionar un par de claves"
    },
    "ZonaDisponibilidad": {
      "Type": "String",
      "Description": "Zona de disponibilidad para los recursos (se usar√° la misma para todos)",
      "AllowedPattern" : ".+",
      "ConstraintDescription": "Es obligatorio escribir una zona de disponibilidad",
      "Default": "us-east-2c"
    }
  },
  "Resources": {
    "LaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Metadata": {
        "AWS::CloudFormation::Init": {
          "config": {
            "packages": {
              "yum": {
                "httpd": []
              }
            },
            "services": {
              "sysvinit": {
                "httpd": {
                  "enabled": "true",
                  "ensureRunning": "true"
                }
              }
            }
          }
        }
      },
      "Properties": {
        "ImageId": "ami-922914f7",
        "InstanceType": { "Ref": "TipoInstancia" },
        "KeyName": { "Ref": "ParClave" },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [ "#!/bin/bash -xe\n",
                "# Install the files and packages from the metadata\n",
                "/opt/aws/bin/cfn-init -v ",
                "         --stack ", { "Ref": "AWS::StackName" },
                "         --resource LaunchConfig",
                "         --region ", { "Ref": "AWS::Region" }, "\n"
              ]
            ]
          }
        }
      }
    },
    "GrupoEscalado": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "AvailabilityZones": [ { "Ref": "ZonaDisponibilidad" } ],
        "LaunchConfigurationName": { "Ref" : "LaunchConfig" },
        "MinSize": { "Ref": "NumeroInstancias" },
        "MaxSize": { "Ref": "NumeroInstancias" },
        "LoadBalancerNames": [ { "Ref": "Balanceador" } ],
      }
    },
    "Balanceador": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "AvailabilityZones": [ { "Ref": "ZonaDisponibilidad" } ],
        "Listeners": [
          {
            "LoadBalancerPort": "80",
            "InstancePort": "80",
            "Protocol": "TCP",
            "InstanceProtocol" : "TCP"
          }
        ],
        "HealthCheck": {
          "Target": "TCP:80",
          "HealthyThreshold": "2",
          "UnhealthyThreshold": "2",
          "Interval": "10",
          "Timeout": "5"
        }
      }
    }
  },
  "Outputs": {
    "URLBalanceador": {
      "Description" : "Balanceador",
      "Value" : {
        "Fn::Join": [
          "", 
          [ "http://", "Fn::GetAtt": [ "Balanceador", "DNSName" ] ]
        ]
      }
    }
  }
}
